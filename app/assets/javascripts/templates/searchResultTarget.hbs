<div class="single-search-result target-info-box medium-margin-right medium-margin-bottom col-xs-12 col-sm-5 col-md-3 col-lg-3">
<h4 class="centre break-word">{{#link-to "targets.index" (query-params uri=result.URI)}}{{result.prefLabel}}{{/link-to}}</h4>
{{target_image_src result.seeAlso}}
<p>{{result.alternativeName}}<p>
{{#if result.pharmacologyInfoAvailable}}
{{#if result.hasPharmacology}}
{{#link-to "targets.pharmacology" (query-params uri=result.URI)}}Pharmacology ({{result.pharmacologyRecords}}){{/link-to}}<span class="badge small-margin-left">{{result.pharmacologyRecords}}</span>
{{else}}
<em class="muted">No pharmacology</em>
{{/if}}
{{else}}
<small><em>Fetching Pharmacology Count</em></small>
{{/if}}
{{#if result.pathwayInfoAvailable}}
{{#if result.hasPathways}}
{{#link-to "targets.pathways" (query-params uri=result.URI)}}Pathways ({{result.pathwayRecords}}){{/link-to}}<span class="badge small-margin-left">{{result.pathwayRecords}}</span>
{{else}}
<em class="muted">No pathways</em>
{{/if}}
{{else}}
<small><em>Fetching Pathway Count</em></small>
{{/if}}
</div>
