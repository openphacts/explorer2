<div>
    <ul class="breadcrumb">
        <li><a href="/">Home</a> <span class="divider">/</span></li>
        <li>{{#linkTo 'compound.index' controllers.compound}}{{controllers.compound.prefLabel}}{{/linkTo}} <span class="divider">/</span></li>
        <li class="active">Compound Structure</li>
        <div class="row pull-right"> 
            <div class="span1 small-padding-top small-padding-right">Provenance</div>
                <div class="span2 btn-group" data-toggle="buttons-radio" style="margin-top:-5px;">
                    <button class="btn">On</button>
                    <button class="btn active">Off</button>
                </div>
            </div>
        </div>
    </ul>
<div>
<div class="row btn-group" data-toggle="buttons-radio" style="margin-top:-5px;">
    <div class="span4 big-padding-left">
        <button class="btn active" {{action 'structureSearchType' 'exact'}}>Exact</button>
        <button class="btn" {{action 'structureSearchType' 'substructure'}}>Sub-structure</button>
        <button class="btn" {{action 'structureSearchType' 'similarity'}}>Similarity</button>
    </div>
</div>
<div class="row">
    <div class="span4 big-padding-left">
        {{controllers.compound.prefLabel}}
        {{controllers.compound.smiles}}
    </div>
</div>
	<div style="padding:30px">	
	<table class="mytable">
		<thead id="tablehead" class="headingstyle">
<tr>
<th>type</th>
<th>molecule</th>
<th>csURI</th>
<th>matchType</th>
<th>complexity</th>
<th>isotopic</th>
<th>hasSpectra</th>
<th>hasPatents</th>
</tr>
</thead>
<tbody>
{{#each}}
<tr class="record-deco">
<td>{{type}}</td>
<td>{{molecule}}</td>
<td>{{csURI}}</td>
<td>{{matchType}}</td>
<td>{{complexity}}</td>
<td>{{isotopic}}</td>
<td>{{hasSpectra}}</td>
<td>{{hasPatents}}</td>
</tr>
{{/each}}
</tbody>
</table>
</div>
