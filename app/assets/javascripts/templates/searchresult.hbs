<div class="search-exact-match big-margin-top">
<div class="big-margin-right thumbnail left">{{cs_image_src compound.csUri}}</div>
<h1>{{#linkTo compound compound}}{{compound.prefLabel}}{{/linkTo}}</h1>
    <div class="clear"></div>
<!-- The views are rendered in the index template and it looks like you cannot add actions to
     the IndexController (ember complains if you try to create your own IndexController -->
{{#if compound.isExpanded}}
<h3 class="compound-smiles big-margin-right big-margin-top">{{compound.smiles}}</h3>
<dl class="big-margin-top">
    <dt class="medium-padding-bottom"><h3>description</h3></dt>
    <dd>{{compound.description}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>toxicity</h3></dt>
    <dd>{{compound.toxicity}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>protein binding</h3></dt>
    <dd>{{compound.proteinBinding}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>bio-transformation</h3></dt>
    <dd>{{compound.biotransformationItem}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>full molecular weight</h3></dt>
    <dd>{{compound.fullMWT}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>hba</h3></dt>
    <dd>{{compound.hba}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>hbd</h3></dt>
    <dd>{{compound.hbd}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>inchi</h3></dt>
    <dd>{{compound.inchi}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>mw freebase</h3></dt>
    <dd>{{compound.mwFreebase}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>ro5 violations</h3></dt>
    <dd>{{compound.ro5Violations}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>rtb</h3></dt>
    <dd>{{compound.rtb}}</dd>
    <dt class="medium-padding-bottom medium-padding-top"><h3>logp</h3></dt>
    <dd>{{compound.logp}}</dd>
</dl>
    <div class="big-margin"><button {{action contract target="view"}}>Hide details...</button></div>
{{else}}
    <div class="big-margin"><button {{action expand target="view"}}>More details...</button></div>
{{/if}}
</div>
