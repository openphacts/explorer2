<!-- breadcrumb	-->
<ul class="breadcrumb hidden-xs">
	<li>{{#link-to "index"}}Home{{/link-to}}</li>
	<li>{{name}}</li>
	<li class="active">Disease Information</li>
</ul>


<!-- main -->
<div class="container">
	<div class="large-top-spacing">
		<div class="row">
			<h1>{{name}}</h1>
			{{#if hasDiseaseClasses}}
			<h3>Disease Classes</h3>
			<ul class="list-inline">
				{{#each diseaseClass}}
				<li>{{diseaseClassLink this}}</li>
				{{/each}}
			</ul>
			{{/if}}
		</div>
	</div>
</div>
