<div class="goto-button" id="top">
	<button class="btn btn-default btn-sm" {{action "goToTop"}} title="Click to return to the top of the table">Go to top</button>
</div>
<div class="breadcrumb">
	<ul class="breadcrumb inline">
		<li><a href="/">Home</a></li>
		<li>{{#link-to "targets.index" (query-params uri=URI)}}{{prefLabel}}{{/link-to}}</li>
		<li class="active">Pathways</li>
	</ul>
	<span class="pull-right">
		<span class="small-padding-top small-padding-right">Provenance</span>
		<span class="btn-group" style="margin-top:-6px;" data-toggle="buttons">
			<label {{action 'enableProvenance'}} class="btn btn-default">
				<input type="radio" name="options" id="option1" checked>On
			</label>
			<label {{action 'disableProvenance'}} class="btn btn-default active">
				<input type="radio" name="options" id="option2">Off
			</label>
		</span>
	</span>
</div>
<!-- actual results -->
<div id="summary-anchor">
	<div id="summary" class="compound_summary collapse in">

		<div id="target-image" class="col-md-2 small-padding-top big-padding-bottom">{{target_image_src seeAlso}}</div>
		<div>
			<h3>{{#link-to "targets.index" (query-params uri=URI)}}{{prefLabel}}{{/link-to}}{{#if notEmpty}} ({{currentCount}} of {{totalCount}} results loaded){{/if}}{{!-- <a href="#targetPharmaFilterModalView" role="button" class="btn btn-default small-margin-left" data-toggle="modal" title="Click to select filters which can be applied to the results">Filter Results</a>--}}{{#if haveRecords}}<a href="#targetPharmaDownload" {{action "tsvDownload" this}} role="button" class="btn btn-default small-margin-left" data-toggle="modal" title="Click to create in TSV formatted compound pharmacology results">Create TSV</a>{{/if}}</h3>
			<div class="row">
				<div class="col-md-6 justify normal-font">{{expandableDescription description}}</div>
			</div>
		</div>
	</div>
</div>
<!-- RESULT LISTING -->
{{#if notEmpty}}
<div class="table-responsive" style="padding:30px">
	<table class="mytable">
		<thead id="tablehead" class="headingstyle">
			<tr>
				<th style="width: 20%;" class="centre">Title</th>
				<th style="width: 10%;">Identifier</th>
				<th style="width: 30%;" class="centre">Description</th>
				<th style="width: 10%;">Ontology</th>
				<th style="width: 10%;">Organism</th>
				<th style="width: 10%;">Gene Product</th>
				<th style="width: 10%;">Revision</th>
			</tr>
		</thead>
		<tbody>
			{{#each  pathway in pathways}}
			<tr class="record-deco">
				<td class="cell-basictext">{{#link-to "pathways.index" (query-params uri=pathway.identifier)}}{{pathway.title}}{{/link-to}}</td>
				<td class="cell-basictext">{{textLink pathway.identifier}}</td>
				<td class="cell-longtext">{{pathway.description}} {{#if showProvenance}}{{provenanceLinkout pathway.wikipathwaysProvenance.description pathway.wikipathwaysProvenance.source}}{{/if}}</td>
				<td class="cell-basictext">{{pathway.pathwayOntology}}</td>
				<td class="cell-basictext">{{pathwayOrganismLink pathway.organism pathway.organismLabel}} {{#if showProvenance}}{{provenanceLinkout pathway.wikipathwaysProvenance.organismLabel pathway.wikipathwaysProvenance.source}}{{/if}}</td>
				<td class="cell-basictext">{{pathway.geneProduct}}</td>
				<td class="cell-basictext">{{pathwayRevision pathway.revision}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>
{{else}}
<h2 class="centre">There are no pathways for {{prefLabel}}</h2>
{{/if}}
