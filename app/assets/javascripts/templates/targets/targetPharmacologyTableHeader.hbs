<thead class="headingstyle">
	<tr>
		<th colspan="2" class="centre" style="border-right: 2px solid white; padding: 7px;">Compound</th>
		<th colspan="1" class="centre" style="border-right: 2px solid white; padding: 7px;">Target</th>
		<th colspan="2" class="centre" style="border-right: 2px solid white; padding: 7px;">Assay</th>
		<th colspan="4" class="centre" style="border-right: 2px solid white; padding: 7px;">Activity</th>
		<th style="border-right: 2px solid white;"></th>
		<th style="padding: 7px;"></th>
	</tr>
	<tr>
		<!-- Each header has an action which triggers when clicked and asks the controller to sort the column -->
		<!-- The header also has an icon which is shown if controller says that it is sorted. A controller bound -->
		<!-- CSS class is used to style the header when it is selected-->
		<th style="width:10%;">Image</th>
		<th {{action "sortHeader" "compound_name"}} {{bind-attr class="compoundNameSortASC:sortASC compoundNameSortDESC:sortDESC :th-hover"}} style="width: 10%; border-right: 2px solid white; padding: 7px;" title="Click to sort">Name{{#if compoundNameSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if compoundNameSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
		<th {{action "sortHeader" "target_organism"}} {{bind-attr class="targetOrganismSortASC:sortASC targetOrganismSortDESC:sortDESC :th-hover"}} title="Click to sort" style="width: 10%; border-right: 2px solid white; padding: 7px;">Organism{{#if targetOrganismSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if targetOrganismSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
		<th style="width: 10%" {{action "sortHeader" "assay_organism"}} {{bind-attr class="assayOrganismSortASC:sortASC assayOrganismSortDESC:sortDESC :th-hover"}} title="Click to sort">Organism{{#if assayOrganismSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if assayOrganismSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
		<th {{action "sortHeader" "assay_description"}} {{bind-attr class="assayDescriptionSortASC:sortASC assayDescriptionSortDESC:sortDESC :th-hover"}} title="Click to sort" style="width: 30%; border-right: 2px solid white; padding: 7px;">Description{{#if assayDescriptionSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if assayDescriptionSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
		<th style="width: 5%" {{action "sortHeader" "activity_type"}} {{bind-attr class="activityTypeSortASC:sortASC activityTypeSortDESC:sortDESC :th-hover"}} title="Click to sort">Type{{#if activityTypeSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if activityTypeSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
		<th style="width: 5%" {{action "sortHeader" "activity_relation"}} {{bind-attr class="activityRelationSortASC:sortASC activityRelationSortDESC:sortDESC :th-hover"}} title="Click to sort">Relation{{#if activityRelationSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if activityRelationSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
		<th style="width: 5%" {{action "sortHeader" "activity_value"}} {{bind-attr class="activityValueSortASC:sortASC activityValueSortDESC:sortDESC :th-hover"}} title="Click to sort">Value{{#if activityValueSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if activityValueSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
		<th {{action "sortHeader" "activity_unit"}} {{bind-attr class="activityUnitSortASC:sortASC activityUnitSortDESC:sortDESC :th-hover"}} title="Click to sort" style="width: 5%; border-right: 2px solid white; padding: 7px;">Units{{#if activityUnitSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if activityUnitSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
		<th {{action "sortHeader" "molweight"}} {{bind-attr class="molweightSortASC:sortASC molweightSortDESC:sortDESC :th-hover"}} title="Click to sort" style="width: 5%; border-right: 2px solid white; padding: 7px;">Mol Weight{{#if molweightSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if molweightSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
		<th style="width: 5%" {{action "sortHeader" "pChembl"}} {{bind-attr class="pchemblSortASC:sortASC pchemblSortDESC:sortDESC :th-hover"}} title="Click to sort">pChembl{{#if pchemblSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if pchemblSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
	</tr>
</thead>
