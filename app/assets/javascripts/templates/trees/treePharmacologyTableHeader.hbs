<thead class="headingstyle" style="border-spacing: 0;">
	<tr>
		<th colspan="2" class="centre" style="border-right: 2px solid white; padding: 7px;">Compound</th>
		<th colspan="3" class="centre" style="border-right: 2px solid white; padding: 7px;">Target</th>
		<th colspan="2" class="centre" style="border-right: 2px solid white; padding: 7px;">Assay</th>
		<th colspan="4" class="centre" style="border-right: 2px solid white; padding: 7px;">Activity</th>
	</tr>
	<tr>
		<!-- Each header can have an action which triggers when clicked and asks the controller to sort the column -->
		<!-- The header also has an icon which is shown if controller says that it is sorted. A controller bound -->
		<!-- CSS class is used to style the header when it is selected-->
		<th class="centre" style="width: 10%;">Image</th>
		<th style="border-right: 2px solid white; padding: 7px; width: 10%;" {{action "sortHeader" "compound_name"}} {{bind-attr class=":centre compoundNameSortASC:sortASC compoundNameSortDESC:sortDESC :th-hover :medium-padding-left :medium-padding-right"}} title="Click to sort"><span>Name</span><span>{{#if compoundNameSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left right"></i>{{/if}}{{#if compoundNameSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left right"></i>{{/if}}</span></th>
		<th style="width: 10%" {{action "sortHeader" "target_name"}} {{bind-attr class=":centre targetNameSortASC:sortASC targetNameSortDESC:sortDESC :th-hover :medium-padding-left :medium-padding-right"}} title="Click to sort"><span>Name</span><span>{{#if targetNameSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left right"></i>{{/if}}{{#if targetNameSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left right"></i>{{/if}}</span></th>
		<th style="width: 10%;" {{action "sortHeader" "target_component"}} {{bind-attr class=":centre targetComponentSortASC:sortASC targetComponentSortDESC:sortDESC: :th-hover :medium-padding-left :medium-padding-right" title="Click to sort"}}><span>Components</span><span>{{#if targetComponentSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left right"></i>{{/if}}{{#if targetComponentSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left right"></i>{{/if}}</span></th>
		<th style="border-right: 2px solid white; padding: 7px; width: 5%;" {{action "sortHeader" "target_organism"}} {{bind-attr class=":centre targetOrganismSortASC:sortASC targetOrganismSortDESC:sortDESC :th-hover :medium-padding-left :medium-padding-right"}} title="Click to sort"><span>Organism</span><span>{{#if targetOrganismSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left right"></i>{{/if}}{{#if targetOrganismSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left right"></i>{{/if}}</span></th>
		<th style="width: 5%" {{action "sortHeader" "assay_organism"}} {{bind-attr class=":centre assayOrganismSortASC:sortASC assayOrganismSortDESC:sortDESC :th-hover :medium-padding-left :medium-padding-right"}} title="Click to sort"><span>Organism</span><span>{{#if assayOrganismSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left right"></i>{{/if}}{{#if assayOrganismSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left right"></i>{{/if}}</span></th>
		<th style="border-right: 2px solid white; padding: 7px; width: 25%;" {{action "sortHeader" "assay_description"}} {{bind-attr class=":centre assayDescriptionSortASC:sortASC assayDescriptionSortDESC:sortDESC :th-hover :medium-padding-left :medium-padding-right"}} title="Click to sort"><span>Description</span><span>{{#if assayDescriptionSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left right"></i>{{/if}}{{#if assayDescriptionSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left right"></i>{{/if}}</span></th>
		<th style="width: 5%;"{{action "sortHeader" "activity_type"}} {{bind-attr class=":centre activityTypeSortASC:sortASC activityTypeSortDESC:sortDESC :th-hover :medium-padding-left :medium-padding-right"}} title="Click to sort"><span>Type</span><span>{{#if activityTypeSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left right"></i>{{/if}}{{#if activityTypeSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left right"></i>{{/if}}</span></th>
		<th style="width: 5%;" {{action "sortHeader" "activity_relation"}} {{bind-attr class=":centre activityRelationSortASC:sortASC activityRelationSortDESC:sortDESC :th-hover :medium-padding-left :medium-padding-right" title="Click to sort"}}><span>Relation</span><span>{{#if activityRelationSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left right"></i>{{/if}}{{#if activityRelationSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left right"></i>{{/if}}</span></th>
		<th style="width: 5%;" {{action "sortHeader" "activity_value"}} {{bind-attr class=":centre activityValueSortASC:sortASC activityValueSortDESC:sortDESC :th-hover :medium-padding-left :medium-padding-right" title="Click to sort"}}><span>Value</span><span>{{#if activityValueSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left right"></i>{{/if}}{{#if activityValueSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left right"></i>{{/if}}</span></th>
		<th style="border-right: 2px solid white; padding: 7px; width: 5%;" {{action "sortHeader" "activity_unit"}} {{bind-attr class=":centre activityUnitSortASC:sortASC activityUnitSortDESC:sortDESC :th-hover :medium-padding-left :medium-padding-right" title="Click to sort"}}><span>Units</span><span>{{#if activityUnitSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left right"></i>{{/if}}{{#if activityUnitSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left right"></i>{{/if}}</span></th>
		<th style="width: 5%" {{action "sortHeader" "pChembl"}} {{bind-attr class="pchemblSortASC:sortASC pchemblSortDESC:sortDESC :th-hover"}} title="Click to sort">pChembl{{#if pchemblSortASC}}<i class="glyphicon glyphicon-chevron-up small-margin-left"></i>{{/if}}{{#if pchemblSortDESC}}<i class="glyphicon glyphicon-chevron-down small-margin-left"></i>{{/if}}</th>
	</tr>
</thead>
