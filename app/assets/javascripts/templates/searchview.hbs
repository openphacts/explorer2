<ul class="breadcrumb">
  		<li><a href="/">Home</a> <span class="divider">/</span></li>
  		<li>General Search<span class="divider">/</span></li>
		<li class="active">{{totalResults}} Search Results Found</li>
	
		<div class="row pull-right"> 
  			<div class="span2 btn-group" data-toggle="buttons-radio" style="margin-top:-5px;">
  				<button {{action switchView}} {{bind-attr class=":btn listViewActive:active"}}>List</button>
  				<button {{action switchView}} {{bind-attr class=":btn objectViewActive:active"}}>Object</button>
  			</div>
		</div>
</ul>
	<ul style="list-style-type: none">
    {{#each result in controller}}
    {{#if listView}}
		<li>
			{{#if result.exactMatch}}
  				{{view App.SearchMatch}}
			{{else}}
  				{{view App.SearchResult resultBinding='result'}}
			{{/if}}
		</li>
    {{else}}
		<li class="inline">
			{{#if result.exactMatch}}
  				{{view App.SearchMatch}}
			{{else}}
  				{{view App.SearchResult resultBinding='result'}}
			{{/if}}
		</li>
    {{/if}}
	{{/each}}
</ul>
