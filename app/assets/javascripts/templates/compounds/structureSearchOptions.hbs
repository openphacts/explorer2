<div style="padding-left:30px;">
<span>{{input type="text" classNames="input-xlarge" placeholder="Enter SMILES here" value=smilesValue id="smilesValueInput" title="Enter a SMILES string and then click the button to search for it"}}
	<span class="input-prepend">
		<span class="add-on">Search type</span>
		{{view Ember.Select
		       content=searchTypes
               value=structureSearchType
               optionValuePath="content.value"
               optionLabelPath="content.type"
	       }}
       </span>

		{{!-- {{#link-to "compounds.draw" (query-params smiles=smilesValue) class="btn" title="Draw a compound using the SMILES entered in the box"}}Draw structure{{/link-to}} --}}
</span>
{{#if isExactSearch}}
<span class="input-prepend">
	<span class="add-on">Match type</span>
	{{view Ember.Select
	       content=matchTypes
           value=selectedMatchType
           optionValuePath="content.id"
           optionLabelPath="content.type"
	   }}
   </span>
</span>
	{{/if}}
	{{#if isSimilaritySearch}}
	    <div class="input-prepend">
	       <span class="add-on">Similarity type</span>
                {{view Ember.Select
		       content=thresholdTypes
               value=selectedThresholdType
               optionValuePath="content.id"
               optionLabelPath="content.type"
	       }}
       </div>
       <div class="input-prepend">
	       <span class="add-on">Threshold</span>
	       {{input type="number" classNames="input-mini" value=thresholdPercent min="0.1" max="1.0" step="0.1" placeholder="Threshold percentage" title="Threshold percentage"}}
       </div>
<div class="input-prepend">
			<span class="add-on">Max records</span>
{{input type="text" classNames="input-mini" placeholder="Maximum number of records to retrieve" value=maxRecords id="max-records" title="Maximum number of records to retrieve"}}
	    </div>

	{{/if}}
	{{#if isSubstructureSearch}}
	<div class="input-prepend">
		<span class="add-on">Max records</span>
{{input type="text" classNames="input-min" placeholder="Maximum number of records to retrieve" value=maxRecords id="max-records" title="Maximum number of records to retrieve"}}
	    </div>
		    {{/if}}
	{{!-- <button class="btn medium-margin-bottom" title="Reload compounds with selected threshold and max records values" {{action 'structureSearchType'}}>Go!</button> --}}
	<div>
{{#link-to "compounds.structure" (query-params smiles=smilesValue type=structureSearchType records=maxRecords match=selectedMatchType percent=thresholdPercent threshold=selectedThresholdType) class="btn" title="Search for compounds with the SMILES string entered"}}Search{{/link-to}}
	</div>
</div>
