<div class="col-xs-12 col-md-12 col-md-offset-3 big-margin-bottom">
	<div class="pull-left col-xs-1 col-md-1 input-group">
		<span class="input-group-addon">Provenance</span>
		<span class="input-group-btn" data-toggle="buttons">
			<label {{action 'enableProvenance'}} class="btn btn-default">
				<input type="radio" name="options" id="option1" checked>Show
			</label>
			<label {{action 'disableProvenance'}} class="btn btn-default active">
				<input type="radio" name="options" id="option2">Hide
			</label>
		</span>
	</div>
	<ul class="list-inline">
		{{#if hasPharmacology}}
		<li>{{#link-to "compounds.pharmacology" (query-params uri=this.URI) class="btn btn-default" }}Pharmacology ({{this.pharmacologyRecords}}){{/link-to}}</li>
		{{/if}}
		{{#if hasPathways}}
		<li>{{#link-to "compounds.pathways" (query-params uri=this.URI) class="btn btn-default" }}Pathways ({{this.pathwayRecords}}){{/link-to}}</;i>
		{{/if}}
		<li>{{#link-to "compounds.structure" (query-params smiles=this.smiles type="exact") class="btn btn-default" }}Search by structure{{/link-to}}</li>
		<li>{{#link-to "compounds.draw" (query-params smiles=this.smiles) class="btn btn-default" }}Draw Molecule{{/link-to}}</li>
	</ul>
</div>
